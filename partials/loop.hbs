{{!-- This is the post loop - each post will be output using this markup --}}
{{#foreach posts}}
<div class="blog-post">
    <h2 class="blog-post-title"><a href="{{url}}">{{title}}</a></h2>
    <p class="blog-post-meta">{{date}} by <a href="#">{{author.name}}</a></p>

    <p>{{excerpt words="70"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
</div><!-- /.blog-post -->
{{/foreach}}
